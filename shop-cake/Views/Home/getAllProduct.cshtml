@model PagedList.IPagedList<shop_cake.Models.product>

@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    var count = 0;
}
    <div class="row" id="abc">
        <div class="col-sm-3">
            @foreach (var item in Model)
            {
                <div class="single-item">
                    <div class="ribbon-wrapper"><div class="ribbon sale">Sale</div></div>

                    <div class="single-item-header">
                        <a href="@Html.Action("Index","Product")"><img src="~/image/product/@item.image" alt="" style="height:280px"></a>
                    </div>
                    <div class="single-item-body">
                        <p class="single-item-title">@item.name</p>
                        <p class="single-item-price">
                            <span class="flash-del">@item.unit_price</span>
                            @if (item.promotion_price > 0)
                            {
                                <span class="flash-sale">@item.promotion_price</span>
                            }
                        </p>
                    </div>
                    <div class="single-item-caption">
                        <a class="add-to-cart pull-left" href="shopping_cart.html"><i class="fa fa-shopping-cart"></i></a>
                        <a class="beta-btn primary" href="@Html.Action("Index","Product")">Details <i class="fa fa-chevron-right"></i></a>
                        <div class="clearfix"></div>
                    </div>
                </div>
            }
        </div>
        count = count + 1;
        if (count % 4 == 0)
        {
        <div class="space40">&nbsp;</div>
    </div>
}

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model
                    , Page =>Url.Action("Index","Home"
                    , new { Page })
                    ,PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod="GET", UpdateTargetId ="abc"})
                    )