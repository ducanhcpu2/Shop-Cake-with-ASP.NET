
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh mục sản phẩm</h1>
        </div>
    </div><!--/.row-->

    <div class="row">
        <div class="col-xs-12 col-md-5 col-lg-5">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Sửa danh mục
                </div>
                <div class="panel-body">
                    <form action="@Url.Action("Edit","AdminEditCategory")" method="post">
                        <div class="form-group">
                            <label>Tên danh mục:</label>
                            <input name="id_product_type" style="display:none" value="@ViewBag.Category.id_product_type" />
                            <input type="text" name="name" class="form-control" placeholder="Tên danh mục..." value="@ViewBag.Category.name">
                        </div>
                        <button type="submit" class="btn btn-primary">Sửa</button>
                    </form>
                    
                </div>
            </div>
        </div>
    </div><!--/.row-->
</div>

